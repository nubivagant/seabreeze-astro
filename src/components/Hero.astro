<style>
  /* Ocean color theme (matching your React component theme) */
  section.hero-section {
    background: linear-gradient(to right, var(--ocean-800, #0c4a6e), var(--ocean-600, #0284c7));
    color: white;
  }

  /* Add your seafoam and ocean color variables */
  :root {
    --seafoam-200: #a5f3fc;
    --seafoam-400: #22d3ee;
    --seafoam-500: #06b6d4;
    --ocean-800: #0c4a6e;
    --ocean-600: #0284c7;
    --ocean-900: #0c4a6e;
  }

  /* Animations */
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .fade-in svg {
    animation: float 6s ease-in-out infinite;
  }

  /* Mix blend mode helpers */
  .mix-blend-multiply {
    mix-blend-mode: multiply;
  }

  /* Background image handling */
  :global(img.bg-image) {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
