---
const plans = [
  {
    name: "RYA Dinghy Sailing Training",
    description: "Dinghies are lightweight, easy to rig and launch, making them a great option for both beginners and more experienced sailors.",
    age: "Adult & Youth",
    features: [
      "Adult levels 1, 2 & 3",
      "Youth Stages 1, 2, 3 & 4",
      "Advanced courses: seamanship, day sailing, sailing with spinnakers"
    ],
    cta: "Book your course",
    popular: true,
    color: "primary"
  },
  {
    name: "RYA Powerboat Training",
    description: "Perfect for short trips and exploring nearby waters, our powerboat courses help you make the most of your time on the water.",
    age: "Adult & Youth",
    features: [
      "Powerboat level 1",
      "Powerboat level 2",
      "Safety boat training"
    ],
    cta: "Book your course",
    popular: true,
    color: "primary"
  },
  {
    name: "RYA Courses Ashore",
    description: "Build your confidence and deepen your knowledge with our classroom and online courses, to help you get qualified and feel more prepared.",
    age: "Adult & Youth",
    features: [
      "Marine Radio VHF SRC – classroom or online",
      "First aid – classroom",
      "Safe and fun (safeguarding) – online"
    ],
    cta: "Book your course",
    popular: true,
    color: "primary"
  }

];
---

<section id="pricing" class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16 mt-10">
      <span class="inline-block px-4 py-1 rounded-full bg-accent-100 dark:bg-accent-900 text-accent-600 dark:text-accent-300 font-medium text-sm mb-4">
        What we offer
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">Our training and courses</h2>
      <p class="text-gray-600 dark:text-gray-300">
        Book your place on one of our exciting water activities and courses. Perfect for beginners and experienced adventurers alike.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {plans.map((plan, index) => (
        <div
          class={`card p-6 border ${plan.popular ? `border-${plan.color}-500 dark:border-${plan.color}-400` : 'border-gray-200 dark:border-gray-700'} slide-up relative`}
          style={`animation-delay: ${index * 150}ms`}
        >
          {plan.popular && (
            <div class={`absolute top-0 right-0 bg-${plan.color}-500 text-white px-4 py-1 text-sm font-medium rounded-bl-lg rounded-tr-lg`}>
              Most Popular
            </div>
          )}

          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">{plan.name}</h3>
          <div class="mb-4">
            <span class="px-4 py-1 rounded-full bg-primary-200 text-blue-500 dark:text-gray-300 mb-6">{plan.age}</span>
          </div>
          <p class="text-gray-600 dark:text-gray-300 mb-6">{plan.description}</p>

          <ul class="space-y-3 mb-8">
            {plan.features.map(feature => (
              <li class="flex items-start">
                <svg class={`w-5 h-5 text-${plan.color}-500 mr-2 shrink-0 mt-0.5`} fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-600 dark:text-gray-300">{feature}</span>
              </li>
            ))}
          </ul>

          <a
            href="https://bookwhen.com/seabreeze"
            class={`w-full btn ${plan.popular ? `bg-${plan.color}-600 hover:bg-${plan.color}-700 text-white focus:ring-${plan.color}-500` : 'btn-outline'}`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center">
      <p class="text-gray-600 dark:text-gray-300 mb-2">Need custom or bespoke training for your specific needs?</p>
      <a href="/contact" class="text-primary-600 dark:text-primary-400 font-medium hover:underline">Contact our team today</a>
    </div>
  </div>
</section>
